{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    
    "strict": true,
    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    "moduleResolution": "node",
    "esModuleInterop": true,
    
    "experimentalDecorators": true,
    
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
